# ============================================================================
# THE SANDBOX 3.0 - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env and fill in your actual values
# ⚠️ NEVER commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION
# ----------------------------------------------------------------------------
NODE_ENV="development" # development | production
NEXT_PUBLIC_BASE_URL="http://localhost:3000" # Your app URL

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
# CockroachDB connection string
# Format: postgresql://username:password@host:port/database?sslmode=verify-full
DATABASE_URL="postgresql://user:password@host:26257/defaultdb?sslmode=verify-full"

# ----------------------------------------------------------------------------
# NEXTAUTH.JS AUTHENTICATION
# ----------------------------------------------------------------------------
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ----------------------------------------------------------------------------
# FILE UPLOAD - UPLOADTHING
# ----------------------------------------------------------------------------
# Get credentials from: https://uploadthing.com/dashboard
UPLOADTHING_SECRET="sk_live_..."
UPLOADTHING_APP_ID="your-app-id"
UPLOADTHING_TOKEN="eyJhcGlLZXk..."

# ----------------------------------------------------------------------------
# EMAIL SERVICE - SMTP
# ----------------------------------------------------------------------------
# Using Gmail: Enable 2FA and create App Password
# Using SendGrid/Brevo: Get API credentials
SMTP_HOST="smtp.gmail.com" # or smtp-relay.sendinblue.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="The Sandbox <noreply@sandbox.ieee-itb.org>"

# Optional: Brevo API (if using Sendinblue)
API_KEY_BREVO="xkeysib-..."
GMAIL_APP_PASSWORD="your-gmail-app-password"

# ----------------------------------------------------------------------------
# GOOGLE SHEETS WEBHOOKS (Data Export)
# ----------------------------------------------------------------------------
# Create Google Apps Script web apps for each endpoint
# Deploy as web app with "Anyone" access
API_SHEET_REGISTRATION="https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec"
API_SHEET_PRELIMINARY="https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec"
API_SHEET_PAYMENT="https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec"
API_SHEET_SEMIFINAL="https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec"
API_SHEET_FINAL="https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec"

# ----------------------------------------------------------------------------
# CMS (DATOCMS) - LEGACY v2.0
# ----------------------------------------------------------------------------
# ⚠️ Keep for backward compatibility with old pages
NEXT_DATOCMS_API_TOKEN="your-datocms-token"
DATOCMS_API_TOKEN="your-datocms-token"
CMS_REVALIDATE_TOKEN="your-revalidate-token"

# ----------------------------------------------------------------------------
# LEGACY VARIABLES (v2.0 - Keep for backward compatibility)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_RSVP_TOKEN="your-rsvp-token"
API_SHEET_TICKET_URL_2024="https://script.google.com/..."
API_SHEET_SUB1_2024="https://script.google.com/..."
API_SHEET_PTC_2024="https://script.google.com/..."
